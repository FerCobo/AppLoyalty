<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.deportesdalda">

    <uses-sdk tools:overrideLibrary="com.google.zxing.client.android" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".DeportesDaldaApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher_good"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_good_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ClaseCholdiActivity"
            android:exported="true" />
        <activity
            android:name=".ShopAdminActivity"
            android:exported="true" />
        <activity
            android:name=".ShopActivity"
            android:exported="true" />
        <activity
            android:name=".ReservationActivity"
            android:exported="true" />
        <activity
            android:name=".ListUsersActivity"
            android:exported="true" />
        <activity
            android:name=".AdvertAdminActivity"
            android:exported="true" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4517962136769306~7390841296" />

        <activity
            android:name=".ChangePassActivity"
            android:exported="true" />
        <activity
            android:name=".ContinueActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation" />
        <activity
            android:name=".EditAdminActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation" />
        <activity
            android:name=".EditActivity"
            android:exported="true"
            android:parentActivityName=".HomeActivity"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation" />
        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:parentActivityName=".HomeActivity"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation" />
        <activity
            android:name=".InfoActivity"
            android:exported="true"
            android:parentActivityName=".HomeActivity"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation" />
        <activity
            android:name=".AdministratorActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation" />
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation" />
        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation" />
        <activity
            android:name=".SpashScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation" />
    </application>

</manifest>